@model Guestbook.Models.Guest
@inject Guestbook.Services.Interfaces.IImageService _imageService
@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete the guest below?</h3>
<div>
    <hr />
    <div class="col my-3">
        <img width=275 src="@_imageService.ConvertByteArrayToFile(Model.ImageData, Model.ImageType)" />
    </div>

    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.FullName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FullName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Email)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Email)
        </dd>
        <p>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Message)
        </dt>
        <dd class="col-sm-5">
            @Html.DisplayFor(model => model.Message)
        </dd>
        </p>
    </dl>
    <div class="row my-4">
        <div class="col-auto">
            <form asp-action="Delete">
                <input type="hidden" asp-for="Id" />
                <input type="submit" value="Delete" class="btn btn-danger" />
            </form>
        </div>

        <div class="col-auto">
            <div class="form-group">
                <a type="button" class="btn-success btn" asp-action="Index">Cancel</a>
            </div>
        </div>
    </div>
</div>